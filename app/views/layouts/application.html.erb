<!DOCTYPE html>
<html>
	<head>
	  <title>BudgetPro</title>
	  <%= stylesheet_link_tag :all %>
	  <%= javascript_include_tag :all %>
	  <%= csrf_meta_tag %>
	</head>
	<body>
		<div class="wrapper">
			<div class="header">
				<div class="header-controls">
					<ul>
					<% if current_user %>
						<li>Konichiwa <%= current_user.username %>!</li>
				    	<li><%= link_to "Logout", :logout%></li>
					<% else %>
						<li><%= link_to "Sign up", users_path, :method => :new %></li>	
				    <% end %>
					</ul>
				</div>
			</div>
			<div class="spacer"></div>
			<% if current_user %>
			<div class="primary-navigation">
				<ul>
					<li class="active"><%= link_to "Programs", programs_path %></li>
					<li><%= link_to "Dept Profile", edit_user_path(current_user.id)%></li>
					<% if (current_user = "admin") %>
						<li><a href="http://dev.sa.sc.edu/export">Export</a></li>
					<% end %>	
				</ul>	
				<div class="clear-both"></div>
			</div>
			<% end %>
			<% if !notice.nil? %>
			<div class="flash-success"><%= notice %></div>
			<% end %>
			<div class="standard-block">		
				<%= yield %>
			</div>
			<div class="footer">
				<%= image_tag('footer_logo.png') %>
			</div>	
		</div>
	</body>
</html>
